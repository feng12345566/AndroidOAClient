<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/toptitlelayout"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">
         <RadioGroup 
        android:id="@+id/questiontypecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <RadioButton 
            android:id="@+id/selectedquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:button="@null"
            android:text="选择题"
            android:background="@drawable/selector_tatistics"/>
        <RadioButton 
            android:id="@+id/editedquestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:button="@null"
            android:text="简答题"
            android:background="@drawable/selector_tatistics"/>
    </RadioGroup>
    <RadioGroup 
        android:id="@+id/charttypecheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">
        <RadioButton 
            android:id="@+id/piechart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:button="@null"
            android:text="饼状图"
            android:background="@drawable/selector_tatistics"/>
        <RadioButton 
            android:id="@+id/barchart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:button="@null"
            android:text="直方图"
            android:background="@drawable/selector_tatistics"/>
    </RadioGroup>
    </LinearLayout>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:id="@+id/chartlayout">
        <android.support.v4.view.ViewPager
            android:id="@+id/chartviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.mct.view.XListView
            android:id="@+id/editquestionanswerlistview" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></com.mct.view.XListView>
    </FrameLayout>
</LinearLayout>
